generator client {
  provider = "prisma-client"
  output   = "../db/client"
}

datasource db {
  provider = "mysql"
}

model User {
  id            Int             @id @default(autoincrement())
  username      String          @unique
  password      String
  createdAt     DateTime        @default(now())
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id          String   @id @unique // UUID or random string
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  expiresAt   DateTime
  revokedAt   DateTime? // null = active token

  userAgent   String? // optional but SUPER useful
  ipAddress   String? // optional
}
